<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Naveasy.Samples.Views.FeaturePageD"
             x:DataType="viewModels:FeaturePageDViewModel"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Naveasy.Samples.Views.FeatureD"
             Title="{Binding Title}">
    <ScrollView>
        <VerticalStackLayout Spacing="25"
                             Padding="30,0">
            <Label Text="Page D Content"
                   Margin="15"
                   Style="{StaticResource Headline}" />

            <Button Text="Back to Root"
                    Command="{Binding NavigateCommand}"
                    BackgroundColor="Coral" />
            <Button Text="Sign out"
                    Command="{Binding SignOutCommand}"
                    BackgroundColor="Coral" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
