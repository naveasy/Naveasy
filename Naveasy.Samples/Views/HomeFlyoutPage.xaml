<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage x:Class="Naveasy.Samples.Views.HomeFlyoutPage"
            x:DataType="viewModels:HomeFlyoutPageViewModel"
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:viewModels="using:Naveasy.Samples.ViewModels"
            Title="MainFlyoutPage">
    <ContentPage Title="Menu">
        <StackLayout Spacing="20"
                     Margin="15">
            <Button Text="Products"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Products" />
            <Button Text="Help"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Help" />
            <Button Text="Sign out"
                    Command="{Binding SignOutCommand}" />
        </StackLayout>
    </ContentPage>
</FlyoutPage>