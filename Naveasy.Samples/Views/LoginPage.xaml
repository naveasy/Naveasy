<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Naveasy.Samples.Views.LoginPage"
             x:DataType="viewModels:LoginPageViewModel"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="using:Naveasy.Samples.ViewModels"
             Title="Login">
    <ScrollView>
        <VerticalStackLayout Spacing="25"
                             Padding="30,0">
            <Image Source="dotnet_bot.png"
                   HeightRequest="185"
                   Aspect="AspectFit" />

            <Label Text="Login"
                   Margin="15"
                   Style="{StaticResource Headline}" />

            <Button Text="ContentPage"
                    Command="{Binding LoginCommand}"
                    CommandParameter="ContentPage"
                    HorizontalOptions="Fill" />

            <Button Text="FlyoutPage"
                    Command="{Binding LoginCommand}"
                    CommandParameter="FlyoutPage"
                    HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
