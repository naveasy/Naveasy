<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Naveasy.Samples.Views.PageB"
             x:DataType="viewModels:PageBViewModel"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Naveasy.Samples.ViewModels">
    <ScrollView>
        <VerticalStackLayout Spacing="25"
                             Padding="30,0">
            <Label Text="Page B Content"
                   Margin="15"
                   Style="{StaticResource Headline}" />

            <Button Command="{Binding NavigateCommand}" Text="Go C"/>
            <Button Command="{Binding BackCommand}" Text="Go Back"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
